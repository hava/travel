<p id="notice"><%= notice %></p>

<div >
  <label class="form-item">Name:</label>
  <div class="form-item inlineeditform">
    <span><%= @holiday.name %></span>
    <%= link_to 'Edit', {}, :class => "inlineedit" %>
    <span class="hiddeninline">
      <%= form_for(@holiday, :html => { :method => :put, :class => "form-item"}) do |f| %>
          <%= f.text_field :name, :class => "field" %>
          <%= f.submit "Save", :field => "name" %>
      <% end %>
    </span>
  </div>  
</div>


<p>
  <b>From date:</b>
  <%= @holiday.from_date %>
</p>

<p>
  <b>To date:</b>
  <%= @holiday.to_date %>
</p>

